

<style>

    .title {
        font-size: 25px;
        font-weight: 600;
    }

    .com {
        font-size: 21px;
        font-weight: 400;
    }

    h1 {
        font-weight: 600;
    }
</style>

<H1>課程詳細資訊</H1>

<hr />

<div class="container" id="DetailTable">

    <div class="form-group">
        <label for="name" class="form-label title">課程名稱: </label>
        <label for="name" class="form-label com">{{products.name}}</label>
    </div>

    <div class="form-group">
        <label for="name" class="form-label title">課程定價: </label>
        <label for="name" class="form-label com">{{products.price}}</label>
        <label for="name" class="form-label com"> $</label>
    </div>

    <div class="form-group">
        <label for="name" class="form-label title">課程類別: </label>
        <label for="name" class="form-label com">{{products.type}}</label>
    </div>

    <div class="form-group">
        <label for="name" class="form-label title">課程區域: </label>
        <label for="name" class="form-label com">{{products.location}}</label>
    </div>

    <div class="form-group">
        <label for="name" class="form-label title">課程簡述: </label>
        <label for="name" class="form-label com">{{products.description_S}}</label>
    </div>

    <div class="form-group">
        <label for="name" class="form-label title">課程詳述: </label>
        <div><label for="name" class="form-label com">{{products.description_L}}</label></div>
    </div>

    <div class="form-group">
        <label for="name" class="form-label title">課程詳述1: </label>
        <div><label for="name" class="form-label com">{{products.description_L_1}}</label></div>
    </div>

    <div class="form-group">
        <label for="name" class="form-label title">課程詳述2: </label>
        <div><label for="name" class="form-label com">{{products.description_L_2}}</label></div>
    </div>

    <div class="form-group">
        <label for="name" class="form-label title">課程詳述3: </label>
        <div><label for="name" class="form-label com">{{products.description_L_3}}</label></div>
    </div>

    <div class="form-group">
        <label for="name" class="form-label title">課程詳述4: </label>
        <div><label for="name" class="form-label com">{{products.description_L_4}}</label></div>
    </div>

    <div class="form-group">
        <label for="name" class="form-label title">課程詳述5: </label>
        <div><label for="name" class="form-label com">{{products.description_L_5}}</label></div>
    </div>

    <div class="form-group">
        <label class="col-form-label title">活動開始時間: </label>
        <label for="name" class="form-label com">{{products.startDate}}</label>
    </div>

    <div class="form-group">
        <label class="col-form-label title">活動結束時間: </label>
        <label for="name" class="form-label com">{{products.endDate}}</label>
    </div>

    <div class="form-group">
        <label for="name" class="form-label title">上架中: </label>
        <label for="name" class="form-label com">{{products.isSold}}</label>
    </div>

    <div class="form-group">
        <label for="name" class="form-label title">圖片: </label>
        <div v-for="pic in productPics">
            <img v-bind:src="''+pic.picPath" alt="Alternate Text" height="100" />
        </div>
    </div>
    <button class="btn btn-dark" onclick="location.href='/Product/MyProducts'">確認</button>

    <button class="btn btn-primary" onclick="location.href='/Product/Edit'">修改課程</button>
</div>

<script>
        var app = new Vue({
            el: '#DetailTable',
            data: {
                products: [],
                productPics: []
            },   ///data

            mounted: function () {
                var self = this;
                fetch("/Product/GetPdSession")
                    .then(function (res) { return res.json() })
                    .then(function (d) { self.products = d[0] })

                fetch("/Product/GetPic")
                    .then(function (res) { return res.json() })
                    .then(function (d) { self.productPics = d })
            } //mounted
        })
</script>
