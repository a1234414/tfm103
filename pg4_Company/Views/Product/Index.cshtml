<h1>我的商品</h1>


<h2 style="text-align:right;"><a href="/Product/Create">新增商品</a></h2>

<div class="container-fluid" id="ProductTable">
    <button class="btn btn-primary" v-on:click="toggle">切換 上/下架商品</button>
    <table class="table">
        <thead>
            <tr>
                <th scope="col">編號</th>
                <th scope="col">商品圖</th>
                <th scope="col">商品名稱</th>
                <th scope="col">價格</th>
                <th scope="col">開始日期</th>
                <th scope="col">結束日期</th>
                <th scope="col">上架狀態</th>
                <th scope="col">編輯</th>
                <th scope="col">明細</th>
                <th scope="col">上架/下架</th>
            </tr>
        </thead>

        <tbody>
            <!---上架商品檢視--->
            <tr v-for="pd in producton" v-if="isShow">
                <td>{{pd.id}}</td>    <!---開頭小寫--->
                <td><img v-bind:src="''+pd.productPic.picPath" alt="No Img" height="100"/></td>
                <td>{{pd.name}}</td>
                <td>{{pd.price}}</td>
                <td>{{pd.startDate}}</td>
                <td>{{pd.endDate}}</td>
                <td>{{pd.isSold}}</td>
                <td><button class="btn btn-dark" v-on:click="editPd(pd.id)" onclick="location.href='/Product/Edit'">Edit</button></td>
                <td><button class="btn btn-primary" v-on:click="editPd(pd.id)" onclick="location.href='/Product/Detail'">Detail </button></td>
                <td><button class="btn btn-danger" v-on:click="delePic(pd.id)">下架</button></td>
            </tr>

            <!---下架商品檢視--->
            <tr v-for="pd in productoff" v-if="!isShow">
                <td>{{pd.id}}</td>
                <td><img v-bind:src="''+pd.productPic.picPath" alt="No Img" height="100" /></td>
                <td>{{pd.name}}</td>
                <td>{{pd.price}}</td>
                <td>{{pd.startDate}}</td>
                <td>{{pd.endDate}}</td>
                <td>{{pd.isSold}}</td>
                <td><button class="btn btn-dark" v-on:click="editPd(pd.id)" onclick="location.href='/Product/Edit'">Edit</button></td>
                <td><button class="btn btn-primary" v-on:click="editPd(pd.id)" onclick="location.href='/Product/Detail'">Detail </button></td>
                <td><button class="btn btn-success" v-on:click="onPd(pd.id)">上架</button></td>
            </tr>

        </tbody>


    </table>
</div>


<script>
    //====================Vue================
    var app = new Vue({
        el: '#ProductTable',
        data: {
            producton: [],
            productoff: [],
            productPic: [],
            isShow: true
        },   ///data

        mounted: function () {
            let self = this;

            fetch("/Product/ProductSource")
                .then(function (res) { return res.json() })
                .then(function (d) { self.producton = d })

            fetch("/Product/ProductSourceOff")
                .then(function (res) { return res.json() })
                .then(function (d) { self.productoff = d })


        }, //mounted

        methods: {
            editPd: function (id) {
                console.log("ProductId: " + id);
                let data = new FormData();
                data.append("id", id);   //key value

                fetch("SetPdSession", {
                    body: data,
                    method: "POST",
                });
                /* .then(res => res.text());*/
                /*  .then(function (d) { alert("ProductID: "+ d+ "   轉至Edit") });  DEBUG*/
            },
            delePic: function (id) {
                let self = this;
                var x = confirm("確認下架商品?");
                if (x != true)
                    return false;
                let data = new FormData();
                data.append("id", id);

                fetch("DeletePd", {
                    body: data,
                    method: "POST",
                });
                alert("已下架");
                fetch("/Product/ProductSource")
                    .then(function (res) { return res.json() })
                    .then(function (d) { self.producton = d })

            },
            onPd: function (id) {
                let self = this;
                var x = confirm("確認上架商品?");
                if (x != true)
                    return false;
                let data = new FormData();
                data.append("id", id);

                fetch("OnPd", {
                    body: data,
                    method: "POST",
                });
                alert("已上架");
                fetch("/Product/ProductSourceOff")
                    .then(function (res) { return res.json() })
                    .then(function (d) { self.productoff = d })
            },
            toggle: function () {
                let self = this;
                this.isShow = !this.isShow;
                fetch("/Product/ProductSourceOff")
                    .then(function (res) { return res.json() })
                    .then(function (d) { self.productoff = d })
                fetch("/Product/ProductSource")
                    .then(function (res) { return res.json() })
                    .then(function (d) { self.producton = d })
            }
        }//methods
    })

</script>